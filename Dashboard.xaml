<Window x:Class="Library.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,0,408">
            <MenuItem Header="_Items">
                <MenuItem Header="_AddItem"/>
                <MenuItem Header="_ViewItems"/>
                <MenuItem Header="_EditItem"/>
                <MenuItem Header="_DeleteItem"/>
            </MenuItem>
            <MenuItem Header="_Authors">
                <MenuItem Header="_AddAuthor"/>
                <MenuItem Header="_ViewAuthors"/>
                <MenuItem Header="_EditAuthor"/>
                <MenuItem Header="_DeleteAuthor"/>
            </MenuItem>
            <MenuItem Header="_Publishers">
                <MenuItem Header="_AddPublisher"/>
                <MenuItem Header="_ViewPublishers"/>
                <MenuItem Header="_EditPublisher"/>
                <MenuItem Header="_DeletePublisher"/>
            </MenuItem>
        </Menu>


    </Grid>
</Window>
